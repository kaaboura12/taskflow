{% extends 'base.html.twig' %}

{% block title %}Edit Task - TaskFlow{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Edit Task</h1>
        <div>
            <a href="{{ path('app_task_index') }}" class="btn btn-outline-primary me-2">
                <i class="fas fa-arrow-left me-2"></i> Back to Tasks
            </a>
            <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-outline-primary">
                <i class="fas fa-eye me-2"></i> View Task
            </a>
        </div>
    </div>
    
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            {{ include('task/_form.html.twig', {'button_label': 'Update'}) }}
            
            <div class="mt-3">
                {{ include('task/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %} 